							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/user/register/otp",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"user",
								"register",
								"otp"
							]
						}
					}
				},
				{
					"name": "Register",
